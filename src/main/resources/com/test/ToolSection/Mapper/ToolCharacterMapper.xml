<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.test.ToolSection.Mapper.ToolCharacterMapper">

    <select id="list" resultType="com.test.ToolSection.POJO.Tool">
        select * from tradeplatform.toolcharacter
    </select>

    <select id="selectpage" resultType="com.test.ToolSection.POJO.Tool">
        select * from tradeplatform.toolcharacter
        <where>
            <if test="name != null">
                 and name like concat('%',#{name},'%')
            </if>
            <if test="beginPrice != null and endPrice != null">
                and price between #{beginPrice} and #{endPrice}
            </if>
        </where>
        <choose>
            <when test="ishot == 1">
                order by weight desc
            </when>
            <otherwise>
                order by update_time desc
            </otherwise>
        </choose>
        limit #{start},${pagesize}
    </select>

</mapper>